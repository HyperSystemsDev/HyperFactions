$C = "../Common.ui";
$S = "styles.ui";

Group {
  Anchor: (Height: 45, Bottom: 5);
  Background: (Color: #1a2a3a);
  Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
  LayoutMode: Left;

  Group {
    Anchor: (Width: 180);
    LayoutMode: Top;

    Label #MemberName {
      Text: "Player";
      Style: (FontSize: 13, TextColor: #AAAAAA, RenderBold: true, VerticalAlignment: Center);
      Anchor: (Height: 18);
    }
    Label #MemberRole {
      Text: "Member";
      Style: (FontSize: 11, TextColor: #888888, VerticalAlignment: Center);
      Anchor: (Height: 16);
    }
  }

  Label #LastOnline {
    Text: "Online now";
    Style: (FontSize: 11, TextColor: #666666, VerticalAlignment: Center);
    Anchor: (Width: 100);
  }

  Label { FlexWeight: 1; }

  TextButton #PromoteBtn {
    Text: "↑";
    Anchor: (Height: 24, Width: 28);
    Style: $S.@SmallGreenButtonStyle;
  }

  Label { Anchor: (Width: 3); }

  TextButton #DemoteBtn {
    Text: "↓";
    Anchor: (Height: 24, Width: 28);
    Style: $S.@SmallButtonStyle;
  }

  Label { Anchor: (Width: 3); }

  TextButton #KickBtn {
    Text: "X";
    Anchor: (Height: 24, Width: 28);
    Style: $S.@SmallRedButtonStyle;
  }

  Label { Anchor: (Width: 3); }

  TextButton #TransferBtn {
    Text: "★";
    Anchor: (Height: 24, Width: 28);
    Style: $S.@SmallCyanButtonStyle;
  }
}

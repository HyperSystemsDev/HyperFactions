$C = "../Common.ui";
$S = "styles.ui";

Group {
  LayoutMode: Top;

  Group {
    Anchor: (Height: 40, Bottom: 8);
    LayoutMode: Left;

    TextButton #HomeBtn {
      Text: "HOME";
      Anchor: (Height: 32, Width: 100);
      Style: $S.@CyanButtonStyle;
    }

    Label { Anchor: (Width: 10); }

    TextButton #MembersBtn {
      Text: "MEMBERS";
      Anchor: (Height: 32, Width: 100);
      Style: $S.@ButtonStyle;
    }

    Label { Anchor: (Width: 10); }

    TextButton #MapBtn {
      Text: "MAP";
      Anchor: (Height: 32, Width: 100);
      Style: $S.@ButtonStyle;
    }

    Label { Anchor: (Width: 10); }

    TextButton #RelationsBtn {
      Text: "RELATIONS";
      Anchor: (Height: 32, Width: 100);
      Style: $S.@ButtonStyle;
    }
  }

  Group {
    Anchor: (Height: 40);
    LayoutMode: Left;

    TextButton #LeaveBtn {
      Text: "LEAVE";
      Anchor: (Height: 32, Width: 100);
      Style: $S.@RedButtonStyle;
    }

    Label { FlexWeight: 1; }

    TextButton #DisbandBtn {
      Text: "DISBAND";
      Anchor: (Height: 32, Width: 100);
      Style: $S.@RedButtonStyle;
    }
  }
}

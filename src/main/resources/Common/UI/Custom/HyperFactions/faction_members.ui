// Faction Members Page
// Displays member list with management actions

$C = "../Common.ui";
$S = "styles.ui";
$Nav = "nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 550, Height: 500);

    #Title {
      Group {
        $C.@Title {
          @Text = "Members";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      // Header row with member count
      Group {
        Anchor: (Height: 30, Bottom: 10);
        LayoutMode: Left;

        Label #MemberCount {
          Text: "0 members";
          Style: (FontSize: 14, TextColor: #888888, VerticalAlignment: Center);
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Scrollable member list
      Group #MembersListContainer {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        FlexWeight: 1;

        Group #MembersList {
          LayoutMode: Top;

          Group #MemberEntry0 { Anchor: (Height: 50); }
          Group #MemberEntry1 { Anchor: (Height: 50); }
          Group #MemberEntry2 { Anchor: (Height: 50); }
          Group #MemberEntry3 { Anchor: (Height: 50); }
          Group #MemberEntry4 { Anchor: (Height: 50); }
          Group #MemberEntry5 { Anchor: (Height: 50); }
          Group #MemberEntry6 { Anchor: (Height: 50); }
          Group #MemberEntry7 { Anchor: (Height: 50); }
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Top: 8, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Pagination
      Group #Pagination {
        Anchor: (Height: 35);
        LayoutMode: Left;

        TextButton #PrevBtn {
          Text: "< PREV";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        Label #PageInfo {
          Text: "1/1";
          Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Width: 60);
        }

        Label { FlexWeight: 1; }

        TextButton #NextBtn {
          Text: "NEXT >";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }
      }
    }
  }
}

// Native Hytale back button (bottom-left ESC)
$C.@BackButton {}

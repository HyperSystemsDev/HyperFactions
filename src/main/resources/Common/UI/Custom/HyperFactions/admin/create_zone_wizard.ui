// Create Zone Wizard
// Two-column layout for compact display

$C = "../../Common.ui";
$S = "../shared/styles.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 720, Height: 500);

  #Title {
    $C.@Title {
      @Text = "Create Zone";
    }
  }

  #Content {
    LayoutMode: Top;
    Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

    // ==========================================
    // ACTION BUTTONS (at top)
    // ==========================================
    Group #ActionButtons {
      Anchor: (Height: 45, Bottom: 8);
      LayoutMode: Left;

      TextButton #BackBtn {
        Text: "< Back";
        Anchor: (Height: 36, Width: 100);
        Style: $S.@ButtonStyle;
      }

      Label { FlexWeight: 1; }

      TextButton #CreateBtn {
        Text: "Create Zone";
        Anchor: (Height: 36, Width: 150);
        Style: $S.@ButtonStyle;
      }
    }

    // Divider
    Group {
      Anchor: (Height: 1, Bottom: 10);
      Background: (Color: #00AAAA);
    }

    // ==========================================
    // TOP ROW: Zone Type + Zone Name
    // ==========================================
    Group {
      LayoutMode: Left;
      Anchor: (Height: 105, Bottom: 10);

      // Zone Type Card (left)
      Group #ZoneTypeCard {
        LayoutMode: Top;
        FlexWeight: 1;
        Background: (Color: #1a2a3a);
        Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

        Label {
          Text: "Zone Type";
          Style: (FontSize: 11, TextColor: #00FFFF, RenderBold: true);
          Anchor: (Height: 14, Bottom: 8);
        }

        // Two type buttons side by side
        Group {
          LayoutMode: Left;
          Anchor: (Height: 58);

          Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Label {
              Text: "Protected, no PvP";
              Style: (FontSize: 10, TextColor: #AAAAAA, HorizontalAlignment: Center);
              Anchor: (Height: 16, Bottom: 4);
            }

            TextButton #SafeZoneBtn {
              Text: "SafeZone";
              Anchor: (Height: 30);
              Style: $S.@SafeZoneButtonStyle;
            }
          }

          Group { Anchor: (Width: 10); }

          Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Label {
              Text: "Combat, PvP enabled";
              Style: (FontSize: 10, TextColor: #AAAAAA, HorizontalAlignment: Center);
              Anchor: (Height: 16, Bottom: 4);
            }

            TextButton #WarZoneBtn {
              Text: "WarZone";
              Anchor: (Height: 30);
              Style: $S.@WarZoneButtonStyle;
            }
          }
        }
      }

      Group { Anchor: (Width: 10); }

      // Zone Name Card (right)
      Group #ZoneNameCard {
        LayoutMode: Top;
        FlexWeight: 1;
        Background: (Color: #1a2a3a);
        Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

        Label {
          Text: "Zone Name";
          Style: (FontSize: 11, TextColor: #00FFFF, RenderBold: true);
          Anchor: (Height: 14, Bottom: 6);
        }

        Label {
          Text: "Enter a unique name for the zone";
          Style: (FontSize: 10, TextColor: #AAAAAA);
          Anchor: (Height: 16, Bottom: 6);
        }

        $C.@TextField #NameInput {
          Anchor: (Height: 34);
        }
      }
    }

    // ==========================================
    // MIDDLE ROW: Claiming Method + Radius/Flags
    // ==========================================
    Group {
      LayoutMode: Left;
      Anchor: (Height: 200, Bottom: 10);

      // Claiming Method Card (left) - 2 columns
      Group #ClaimMethodCard {
        LayoutMode: Top;
        FlexWeight: 1;
        Background: (Color: #1a2a3a);
        Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

        Label {
          Text: "Claiming Method";
          Style: (FontSize: 11, TextColor: #00FFFF, RenderBold: true);
          Anchor: (Height: 14, Bottom: 8);
        }

        // Row 1: No claims + Single chunk
        Group {
          LayoutMode: Left;
          Anchor: (Height: 52, Bottom: 6);

          Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Label {
              Text: "Create empty zone";
              Style: (FontSize: 9, TextColor: #AAAAAA, HorizontalAlignment: Center);
              Anchor: (Height: 14, Bottom: 2);
            }
            TextButton #MethodNone {
              Text: "No claims";
              Anchor: (Height: 26);
              Style: $S.@ButtonStyle;
            }
          }

          Group { Anchor: (Width: 8); }

          Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Label {
              Text: "Your current chunk";
              Style: (FontSize: 9, TextColor: #AAAAAA, HorizontalAlignment: Center);
              Anchor: (Height: 14, Bottom: 2);
            }
            TextButton #MethodSingle {
              Text: "Single chunk";
              Anchor: (Height: 26);
              Style: $S.@ButtonStyle;
            }
          }
        }

        // Row 2: Circle + Square radius
        Group {
          LayoutMode: Left;
          Anchor: (Height: 52, Bottom: 6);

          Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Label {
              Text: "Circular area";
              Style: (FontSize: 9, TextColor: #AAAAAA, HorizontalAlignment: Center);
              Anchor: (Height: 14, Bottom: 2);
            }
            TextButton #MethodCircle {
              Text: "Circle radius";
              Anchor: (Height: 26);
              Style: $S.@ButtonStyle;
            }
          }

          Group { Anchor: (Width: 8); }

          Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Label {
              Text: "Square area";
              Style: (FontSize: 9, TextColor: #AAAAAA, HorizontalAlignment: Center);
              Anchor: (Height: 14, Bottom: 2);
            }
            TextButton #MethodSquare {
              Text: "Square radius";
              Anchor: (Height: 26);
              Style: $S.@ButtonStyle;
            }
          }
        }

        // Row 3: Use map (full width)
        Group {
          LayoutMode: Top;
          Anchor: (Height: 44);

          Label {
            Text: "Interactive chunk editor";
            Style: (FontSize: 9, TextColor: #AAAAAA, HorizontalAlignment: Center);
            Anchor: (Height: 14, Bottom: 2);
          }
          TextButton #MethodMap {
            Text: "Use claim map";
            Anchor: (Height: 26);
            Style: $S.@ButtonStyle;
          }
        }
      }

      Group { Anchor: (Width: 10); }

      // Right side: Radius + Flags stacked
      Group {
        LayoutMode: Top;
        FlexWeight: 1;

        // Radius Card
        Group #RadiusCard {
          LayoutMode: Top;
          Anchor: (Height: 105, Bottom: 10);
          Background: (Color: #1a2a3a);
          Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

          Group {
            LayoutMode: Left;
            Anchor: (Height: 14, Bottom: 8);

            Label {
              Text: "Radius";
              Style: (FontSize: 11, TextColor: #00FFFF, RenderBold: true);
            }
            Label { FlexWeight: 1; }
            Label #RadiusPreview {
              Text: "~79 chunks";
              Style: (FontSize: 11, TextColor: #55FF55, RenderBold: true);
            }
          }

          // Presets
          Group {
            LayoutMode: Left;
            Anchor: (Height: 28, Bottom: 8);

            TextButton #Radius3 {
              Text: "3";
              Anchor: (Height: 26, Width: 38);
              Style: $S.@ButtonStyle;
            }
            Group { Anchor: (Width: 4); }
            TextButton #Radius5 {
              Text: "5";
              Anchor: (Height: 26, Width: 38);
              Style: $S.@ButtonStyle;
            }
            Group { Anchor: (Width: 4); }
            TextButton #Radius10 {
              Text: "10";
              Anchor: (Height: 26, Width: 38);
              Style: $S.@ButtonStyle;
            }
            Group { Anchor: (Width: 4); }
            TextButton #Radius15 {
              Text: "15";
              Anchor: (Height: 26, Width: 38);
              Style: $S.@ButtonStyle;
            }
            Group { Anchor: (Width: 4); }
            TextButton #Radius20 {
              Text: "20";
              Anchor: (Height: 26, Width: 38);
              Style: $S.@ButtonStyle;
            }
          }

          // Custom input
          Group {
            LayoutMode: Left;
            Anchor: (Height: 28);

            Label {
              Text: "Custom (1-50):";
              Style: (FontSize: 10, TextColor: #AAAAAA, VerticalAlignment: Center);
              Anchor: (Width: 85);
            }
            $C.@TextField #CustomRadiusInput {
              Anchor: (Height: 26, Width: 55);
            }
            Group { Anchor: (Width: 6); }
            TextButton #ApplyCustomRadius {
              Text: "Apply";
              Anchor: (Height: 26, Width: 60);
              Style: $S.@ButtonStyle;
            }
          }
        }

        // Flags Card - side by side like zone type
        Group #FlagsCard {
          LayoutMode: Top;
          Anchor: (Height: 85);
          Background: (Color: #1a2a3a);
          Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

          Label {
            Text: "Flags";
            Style: (FontSize: 11, TextColor: #00FFFF, RenderBold: true);
            Anchor: (Height: 14, Bottom: 8);
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44);

            Group {
              LayoutMode: Top;
              FlexWeight: 1;

              Label {
                Text: "Based on zone type";
                Style: (FontSize: 9, TextColor: #AAAAAA, HorizontalAlignment: Center);
                Anchor: (Height: 14, Bottom: 2);
              }
              TextButton #FlagsDefaults {
                Text: "Use defaults";
                Anchor: (Height: 26);
                Style: $S.@ButtonStyle;
              }
            }

            Group { Anchor: (Width: 8); }

            Group {
              LayoutMode: Top;
              FlexWeight: 1;

              Label {
                Text: "Open settings after";
                Style: (FontSize: 9, TextColor: #AAAAAA, HorizontalAlignment: Center);
                Anchor: (Height: 14, Bottom: 2);
              }
              TextButton #FlagsCustomize {
                Text: "Customize";
                Anchor: (Height: 26);
                Style: $S.@ButtonStyle;
              }
            }
          }
        }
      }
    }

  }
}

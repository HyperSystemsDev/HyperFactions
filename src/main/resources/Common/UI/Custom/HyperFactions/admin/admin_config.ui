$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "admin_nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsAdminNavBar #HyperFactionsAdminNavBar {}

  $C.@Container {
    Anchor: (Width: 780, Height: 700);

    #Title {
      $C.@Title {
        @Text = "Server Configuration";
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);

      // Tab bar
      Group #TabBar {
        LayoutMode: Left;
        Anchor: (Height: 30);
        Padding: (Bottom: 4);

        TextButton #TabGeneral { Text: "General"; Anchor: (Height: 26, Width: 75); Style: $S.@TabActiveButtonStyle; }
        Group { Anchor: (Width: 2); }
        TextButton #TabPower { Text: "Power"; Anchor: (Height: 26, Width: 60); Style: $S.@TabButtonStyle; }
        Group { Anchor: (Width: 2); }
        TextButton #TabClaims { Text: "Claims"; Anchor: (Height: 26, Width: 65); Style: $S.@TabButtonStyle; }
        Group { Anchor: (Width: 2); }
        TextButton #TabCombat { Text: "Combat"; Anchor: (Height: 26, Width: 65); Style: $S.@TabButtonStyle; }
        Group { Anchor: (Width: 2); }
        TextButton #TabChat { Text: "Chat"; Anchor: (Height: 26, Width: 55); Style: $S.@TabButtonStyle; }
        Group { Anchor: (Width: 2); }
        TextButton #TabModules { Text: "Modules"; Anchor: (Height: 26, Width: 70); Style: $S.@TabButtonStyle; }
        Group { Anchor: (Width: 2); }
        TextButton #TabWorldmap { Text: "World Map"; Anchor: (Height: 26, Width: 80); Style: $S.@TabButtonStyle; }
        Group { Anchor: (Width: 2); }
        TextButton #TabProtection { Text: "Protection"; Anchor: (Height: 26, Width: 80); Style: $S.@TabButtonStyle; }
      }

      // Callout / description box
      Group #Callout {
        Anchor: (Height: 32);
        Background: (Color: #0d1a2a);
        Padding: (Left: 10, Right: 10, Top: 4, Bottom: 4);

        Label #CalloutText {
          Text: "Hover over settings for descriptions. Changes are held in memory until you click Save.";
          Style: (FontSize: 10, TextColor: #6699aa, VerticalAlignment: Center);
          FlexWeight: 1;
        }
      }

      // Tab content area (scrollable)
      Group #TabContent {
        LayoutMode: TopScrolling;
        FlexWeight: 1;
        Padding: (Left: 5, Right: 5, Top: 5, Bottom: 5);
      }

      // Footer bar
      Group #Footer {
        LayoutMode: Left;
        Anchor: (Height: 36);
        Padding: (Top: 4);

        TextButton #SaveBtn {
          Text: "Save";
          Anchor: (Height: 28, Width: 80);
          Style: $S.@GreenButtonStyle;
        }

        Group { Anchor: (Width: 8); }

        TextButton #RevertBtn {
          Text: "Revert";
          Anchor: (Height: 28, Width: 80);
          Style: $S.@ButtonStyle;
        }

        Group { FlexWeight: 1; }

        Label #DirtyIndicator {
          Text: "";
          Style: (FontSize: 10, TextColor: #FFAA00, VerticalAlignment: Center);
          Anchor: (Width: 120);
        }

        Group { FlexWeight: 1; }

        TextButton #ResetBtn {
          Text: "Reset Defaults";
          Anchor: (Height: 28, Width: 110);
          Style: $S.@RedButtonStyle;
        }
      }
    }
  }
}

$C.@BackButton {}

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "admin_nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsAdminNavBar #HyperFactionsAdminNavBar {}

  $C.@Container {
    Anchor: (Width: 600, Height: 470);

    #Title {
      $C.@Title {
        @Text = "Backups";
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      Group #PlaceholderContent {
        FlexWeight: 1;
        LayoutMode: Top;

        Label {
          Anchor: (Height: 100);
        }

        Label #ComingSoon {
          Text: "Backup Management";
          Style: (FontSize: 24, TextColor: #00FFFF, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true);
          Anchor: (Height: 40);
        }

        Label #ComingSoonSub {
          Text: "Coming Soon";
          Style: (FontSize: 16, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Height: 30);
        }

        Label {
          Anchor: (Height: 20);
        }

        Label #Description {
          Text: "Create, restore, and manage faction data backups.";
          Style: (FontSize: 12, TextColor: #666666, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Height: 25);
        }

        Label #Description2 {
          Text: "Automatic backups are saved to the data/backups folder.";
          Style: (FontSize: 12, TextColor: #666666, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Height: 25);
        }
      }
    }
  }
}

$C.@BackButton {}

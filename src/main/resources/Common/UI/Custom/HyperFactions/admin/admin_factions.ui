$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "admin_nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsAdminNavBar #HyperFactionsAdminNavBar {}

  $C.@Container {
    Anchor: (Width: 700, Height: 500);

    #Title {
      $C.@Title {
        @Text = "Faction Management";
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      // Header row with count and sort
      Group {
        Anchor: (Height: 35, Bottom: 8);
        LayoutMode: Left;

        Label #FactionCount {
          Text: "0 factions";
          Style: (FontSize: 13, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Width: 120);
        }

        Group { FlexWeight: 1; }

        TextButton #SortByPower {
          Text: "Power";
          Anchor: (Height: 26, Width: 70);
          Style: $S.@ButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #SortByName {
          Text: "Name";
          Anchor: (Height: 26, Width: 65);
          Style: $S.@ButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #SortByMembers {
          Text: "Members";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Scrollable faction list
      Group #FactionListContainer {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        FlexWeight: 1;

        Group #FactionList {
          LayoutMode: Top;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Top: 8, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Pagination
      Group #Pagination {
        Anchor: (Height: 35);
        LayoutMode: Left;

        TextButton #PrevBtn {
          Text: "< Prev";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        Label #PageInfo {
          Text: "1/1";
          Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Width: 60);
        }

        Label { FlexWeight: 1; }

        TextButton #NextBtn {
          Text: "Next >";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }
      }
    }
  }
}

$C.@BackButton {}

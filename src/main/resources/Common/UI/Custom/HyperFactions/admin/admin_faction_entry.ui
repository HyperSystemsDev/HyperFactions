// Admin Faction Entry - Expandable
$C = "../../Common.ui";
$S = "../shared/styles.ui";

Group {
  LayoutMode: Top;
  Anchor: (Bottom: 4);

  // Header wrapper - contains content and clickable overlay
  Group #HeaderWrapper {
    Anchor: (Height: 44);

    // Header content (visual layout)
    Group #HeaderContent {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Background: (Color: #1a2a3a);
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 6);
      LayoutMode: Left;

      // Faction name and leader
      Group {
        Anchor: (Width: 200);
        LayoutMode: Top;

        Label #FactionName {
          Text: "Faction";
          Style: (FontSize: 13, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
          Anchor: (Height: 18);
        }
        Label #LeaderName {
          Text: "Leader: Unknown";
          Style: (FontSize: 10, TextColor: #FFD700, VerticalAlignment: Center);
          Anchor: (Height: 14);
        }
      }

      // Power display
      Group {
        Anchor: (Width: 100);
        LayoutMode: Top;

        Label #PowerDisplay {
          Text: "0/0";
          Style: (FontSize: 12, TextColor: #44CC44, VerticalAlignment: Center, HorizontalAlignment: Center);
          Anchor: (Height: 18);
        }
        Label {
          Text: "power";
          Style: (FontSize: 9, TextColor: #666666, VerticalAlignment: Center, HorizontalAlignment: Center);
          Anchor: (Height: 14);
        }
      }

      // Claims display
      Group {
        Anchor: (Width: 80);
        LayoutMode: Top;

        Label #ClaimsDisplay {
          Text: "0";
          Style: (FontSize: 12, TextColor: #FFAA00, VerticalAlignment: Center, HorizontalAlignment: Center);
          Anchor: (Height: 18);
        }
        Label {
          Text: "claims";
          Style: (FontSize: 9, TextColor: #666666, VerticalAlignment: Center, HorizontalAlignment: Center);
          Anchor: (Height: 14);
        }
      }

      // Member count
      Group {
        Anchor: (Width: 80);
        LayoutMode: Top;

        Label #MemberCount {
          Text: "0";
          Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center, HorizontalAlignment: Center);
          Anchor: (Height: 18);
        }
        Label {
          Text: "members";
          Style: (FontSize: 9, TextColor: #666666, VerticalAlignment: Center, HorizontalAlignment: Center);
          Anchor: (Height: 14);
        }
      }

      Group { FlexWeight: 1; }

      // Expand indicators
      Label #ExpandIcon {
        Text: ">";
        Style: (FontSize: 14, TextColor: #666666, VerticalAlignment: Center, HorizontalAlignment: Center);
        Anchor: (Width: 20);
      }
      Label #CollapseIcon {
        Text: "v";
        Style: (FontSize: 14, TextColor: #00AAAA, VerticalAlignment: Center, HorizontalAlignment: Center);
        Anchor: (Width: 20);
      }
    }

    // Clickable overlay button
    TextButton #Header {
      Text: "";
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Style: $S.@InvisibleButtonStyle;
    }
  }

  // Expanded content
  Group #ExtendedInfo {
    LayoutMode: Top;
    Background: (Color: #0d1520);
    Padding: (Left: 25, Right: 12, Top: 8, Bottom: 10);

    // Stats row
    Group #StatsRow {
      LayoutMode: Left;
      Anchor: (Height: 20, Bottom: 4);

      Label {
        Text: "Created:";
        Style: (FontSize: 10, TextColor: #666666, VerticalAlignment: Center);
        Anchor: (Width: 50);
      }
      Label #CreatedDate {
        Text: "Unknown";
        Style: (FontSize: 10, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 90);
      }

      Label {
        Text: "Home:";
        Style: (FontSize: 10, TextColor: #666666, VerticalAlignment: Center);
        Anchor: (Width: 40);
      }
      Label #HomeLocation {
        Text: "Not set";
        Style: (FontSize: 10, TextColor: #888888, VerticalAlignment: Center);
        FlexWeight: 1;
      }
    }

    // Action buttons
    Group #ActionButtons {
      LayoutMode: Left;
      Anchor: (Height: 32);

      TextButton #TpHomeBtn {
        Text: "TP Home";
        Anchor: (Height: 28, Width: 85);
        Style: $S.@ButtonStyle;
      }

      Group { Anchor: (Width: 8); }

      TextButton #ViewInfoBtn {
        Text: "View Info";
        Anchor: (Height: 28, Width: 90);
        Style: $S.@ButtonStyle;
      }

      Group { Anchor: (Width: 8); }

      TextButton #UnclaimAllBtn {
        Text: "Unclaim All";
        Anchor: (Height: 28, Width: 100);
        Style: $S.@ButtonStyle;
      }

      Group { FlexWeight: 1; }

      TextButton #DisbandBtn {
        Text: "Disband";
        Anchor: (Height: 28, Width: 85);
        Style: $S.@RedButtonStyle;
      }
    }
  }
}

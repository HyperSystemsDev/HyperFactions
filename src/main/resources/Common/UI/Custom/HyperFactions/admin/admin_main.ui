$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "admin_nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsAdminNavBar #HyperFactionsAdminNavBar {}

  $C.@Container {
    Anchor: (Width: 600, Height: 470);

    #Title {
      $C.@Title {
        @Text = "Factions Admin";
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      Group #Stats {
        Anchor: (Height: 30, Bottom: 10);
        LayoutMode: Left;

        Label #TotalFactions {
          Text: "Factions: 0";
          Style: (FontSize: 12, TextColor: #00FFFF, VerticalAlignment: Center);
          Anchor: (Width: 120);
        }

        Label #TotalMembers {
          Text: "Total Members: 0";
          Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Width: 140);
        }

        Label #TotalClaims {
          Text: "Total Claims: 0";
          Style: (FontSize: 12, TextColor: #FFAA00, VerticalAlignment: Center);
          Anchor: (Width: 120);
        }

        Label { FlexWeight: 1; }

        TextButton #ZonesBtn {
          Text: "Zones";
          Anchor: (Height: 26, Width: 70);
          Style: $S.@ButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #ReloadBtn {
          Text: "Reload";
          Anchor: (Height: 26, Width: 70);
          Style: $S.@ButtonStyle;
        }
      }

      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      Group #FactionListContainer {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        FlexWeight: 1;

        Group #FactionList {
          LayoutMode: Top;

          Group #FactionEntry0 { Anchor: (Height: 65); }
          Group #FactionEntry1 { Anchor: (Height: 65); }
          Group #FactionEntry2 { Anchor: (Height: 65); }
          Group #FactionEntry3 { Anchor: (Height: 65); }
          Group #FactionEntry4 { Anchor: (Height: 65); }
          Group #FactionEntry5 { Anchor: (Height: 65); }
        }
      }

      Group {
        Anchor: (Height: 1, Top: 8, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      Group #Pagination {
        Anchor: (Height: 35);
        LayoutMode: Left;

        TextButton #PrevBtn {
          Text: "< Prev";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        Label #PageInfo {
          Text: "1/1";
          Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Width: 60);
        }

        Label { FlexWeight: 1; }

        TextButton #NextBtn {
          Text: "Next >";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }
      }
    }
  }
}

$C.@BackButton {}

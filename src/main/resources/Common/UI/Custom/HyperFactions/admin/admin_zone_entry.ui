// Admin Zone Entry - Expandable
$S = "../shared/styles.ui";

Group {
  LayoutMode: Top;
  Anchor: (Bottom: 4);

  // Header wrapper - contains content and clickable overlay
  Group #HeaderWrapper {
    Anchor: (Height: 45);

    // Header content (visual layout)
    Group #HeaderContent {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Background: (Color: #1a2a3a);
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 6);
      LayoutMode: Left;

      // Type indicator bar (safe=green, war=red)
      Group #TypeIndicator {
        Anchor: (Width: 4, Top: 5, Bottom: 5);
        Background: (Color: #55FF55);
      }

      Group { Anchor: (Width: 10); }

      // Zone name and type
      Group {
        Anchor: (Width: 180);
        LayoutMode: Top;

        Label #ZoneName {
          Text: "Zone";
          Style: (FontSize: 13, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
          Anchor: (Height: 18);
        }
        Label #ZoneType {
          Text: "SAFE (0 chunks)";
          Style: (FontSize: 10, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Height: 16);
        }
      }

      // World
      Label #ZoneWorld {
        Text: "world";
        Style: (FontSize: 11, TextColor: #666666, VerticalAlignment: Center);
        FlexWeight: 1;
      }

      // Expand indicators
      Label #ExpandIcon {
        Text: ">";
        Style: (FontSize: 14, TextColor: #666666, VerticalAlignment: Center, HorizontalAlignment: Center);
        Anchor: (Width: 20);
      }
      Label #CollapseIcon {
        Text: "v";
        Style: (FontSize: 14, TextColor: #00AAAA, VerticalAlignment: Center, HorizontalAlignment: Center);
        Anchor: (Width: 20);
      }
    }

    // Clickable overlay button
    TextButton #Header {
      Text: "";
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Style: $S.@InvisibleButtonStyle;
    }
  }

  // Expanded content
  Group #ExtendedInfo {
    LayoutMode: Top;
    Background: (Color: #0d1520);
    Padding: (Left: 26, Right: 12, Top: 10, Bottom: 12);

    // Details row
    Group #DetailsRow {
      LayoutMode: Left;
      Anchor: (Height: 22, Bottom: 6);

      Label {
        Text: "Chunks:";
        Style: (FontSize: 10, TextColor: #666666, VerticalAlignment: Center);
        Anchor: (Width: 50);
      }
      Label #ChunkCount {
        Text: "0";
        Style: (FontSize: 10, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 50);
      }

      Label {
        Text: "Bounds:";
        Style: (FontSize: 10, TextColor: #666666, VerticalAlignment: Center);
        Anchor: (Width: 50);
      }
      Label #Bounds {
        Text: "N/A";
        Style: (FontSize: 10, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 150);
      }

      Label {
        Text: "Created:";
        Style: (FontSize: 10, TextColor: #666666, VerticalAlignment: Center);
        Anchor: (Width: 52);
      }
      Label #CreatedDate {
        Text: "Unknown";
        Style: (FontSize: 10, TextColor: #888888, VerticalAlignment: Center);
        FlexWeight: 1;
      }
    }

    // Action buttons
    Group #ActionButtons {
      LayoutMode: Left;
      Anchor: (Height: 32);

      TextButton #EditMapBtn {
        Text: "EDIT MAP";
        Anchor: (Height: 28, Width: 80);
        Style: $S.@SmallCyanButtonStyle;
      }

      Group { Anchor: (Width: 6); }

      TextButton #SettingsBtn {
        Text: "FLAGS";
        Anchor: (Height: 28, Width: 60);
        Style: $S.@SmallButtonStyle;
      }

      Group { Anchor: (Width: 6); }

      TextButton #RenameBtn {
        Text: "RENAME";
        Anchor: (Height: 28, Width: 70);
        Style: $S.@SmallButtonStyle;
      }

      Group { FlexWeight: 1; }

      TextButton #DeleteBtn {
        Text: "DELETE";
        Anchor: (Height: 28, Width: 70);
        Style: $S.@SmallRedButtonStyle;
      }
    }
  }
}

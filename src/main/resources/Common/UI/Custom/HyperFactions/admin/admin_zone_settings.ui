              Label {
                Text: "Combat";
                Style: (FontSize: 11, TextColor: #00AAAA, RenderBold: true);
              }
            }

            // Flag 0: pvp_enabled
            Group {
              Anchor: (Height: 24);
              LayoutMode: Left;
              Label #Flag0Name {
                Text: "PvP Enabled";
                Style: (FontSize: 11, TextColor: #CCCCCC, VerticalAlignment: Center);
                Anchor: (Width: 110);
              }
              Label { FlexWeight: 1; }
              Label #Flag0Default {
                Text: "(default)";
                Style: (FontSize: 9, TextColor: #555555, VerticalAlignment: Center);
                Anchor: (Width: 55);
              }
              TextButton #Flag0Toggle {
                Text: "Off";
                Anchor: (Height: 20, Width: 44);
                Style: $S.@ButtonStyle;
              }
            }

            // Flag 1: friendly_fire
            Group {
              Anchor: (Height: 24);
              LayoutMode: Left;
              Label #Flag1Name {

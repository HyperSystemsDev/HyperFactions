// Admin Zone Settings Page
// Configure zone flags visually
// Shows all 19 flags with toggle buttons in 2-column layout with boxes

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "admin_nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsAdminNavBar #HyperFactionsAdminNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 720, Height: 620);

    #Title {
      Group {
        $C.@Title {
          @Text = "Admin: Zone Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      // === Zone Info Header ===
      Group #HeaderSection {
        Anchor: (Height: 32, Bottom: 8);
        LayoutMode: Left;

        Label #ZoneName {
          Text: "Zone Name";
          Style: (FontSize: 16, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
        }

        Label { Anchor: (Width: 12); }

        Label #ZoneType {
          Text: "SAFE";
          Style: (FontSize: 12, TextColor: #2dd4bf, RenderBold: true, VerticalAlignment: Center);
        }

        Label { Anchor: (Width: 12); }

        Label #ZoneChunks {
          Text: "0 chunks";
          Style: (FontSize: 11, TextColor: #888888, VerticalAlignment: Center);
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // === Two-Column Layout ===
      Group #FlagsContainer {
        LayoutMode: Left;
        FlexWeight: 1;

        // ===== LEFT COLUMN (Combat, Damage, Building, Items) =====
        Group #LeftColumn {
          Anchor: (Width: 330);
          LayoutMode: Top;
          Padding: (Left: 0, Right: 10, Top: 0, Bottom: 0);

          // --- Combat Box ---
          Group #CombatBox {
            Background: (Color: #1a2a3a);
            Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
            LayoutMode: Top;
            Anchor: (Bottom: 8);

            Group {
              Anchor: (Height: 18, Bottom: 4);
              Label {
                Text: "COMBAT";
                Style: (FontSize: 11, TextColor: #00AAAA, RenderBold: true);
              }
            }

            // Flag 0: pvp_enabled
            Group {
              Anchor: (Height: 24);
              LayoutMode: Left;
              Label #Flag0Name {
                Text: "PvP Enabled";
                Style: (FontSize: 11, TextColor: #CCCCCC, VerticalAlignment: Center);
                Anchor: (Width: 110);
              }
              Label { FlexWeight: 1; }
              Label #Flag0Default {
                Text: "(default)";
                Style: (FontSize: 9, TextColor: #555555, VerticalAlignment: Center);
                Anchor: (Width: 55);
              }
              TextButton #Flag0Toggle {
                Text: "OFF";
                Anchor: (Height: 20, Width: 44);
                Style: $S.@SmallButtonStyle;
              }
            }

            // Flag 1: friendly_fire
            Group {
              Anchor: (Height: 24);
              LayoutMode: Left;
              Label #Flag1Name {
                Text: "Friendly Fire";
                Style: (FontSize: 11, TextColor: #CCCCCC, VerticalAlignment: Center);
                Anchor: (Width: 110);
              }
              Label { FlexWeight: 1; }
              Label #Flag1Default {
                Text: "(default)";
                Style: (FontSize: 9, TextColor: #555555, VerticalAlignment: Center);
                Anchor: (Width: 55);
              }
              TextButton #Flag1Toggle {
                Text: "OFF";
                Anchor: (Height: 20, Width: 44);
                Style: $S.@SmallButtonStyle;
              }
            }

            // Flag 2: projectile_damage
            Group {
              Anchor: (Height: 24);
              LayoutMode: Left;
              Label #Flag2Name {
                Text: "Projectile Dmg";
                Style: (FontSize: 11, TextColor: #CCCCCC, VerticalAlignment: Center);

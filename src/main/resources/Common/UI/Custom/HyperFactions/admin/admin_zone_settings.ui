      // === Footer ===
      Group #Footer {
        Anchor: (Height: 40);
        LayoutMode: Left;

        TextButton #ResetBtn {
          Text: "RESET TO DEFAULTS";
          Anchor: (Height: 32, Width: 150);
          Style: $S.@SmallRedButtonStyle;
        }

        Label { FlexWeight: 1; }

        TextButton #BackBtn {
          Text: "BACK TO ZONES";
          Anchor: (Height: 32, Width: 130);
          Style: $S.@SmallButtonStyle;
        }
      }

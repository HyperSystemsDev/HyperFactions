        // ===== RIGHT COLUMN (Interaction, Mob Spawning) =====
        Group #RightColumn {
          Anchor: (Width: 330);
          LayoutMode: Top;
          Padding: (Left: 10, Right: 0, Top: 0, Bottom: 0);

          // --- Interaction Box ---
          Group #InteractionBox {
            Background: (Color: #1a2a3a);

// Admin Zone Settings Page
// Configure zone flags visually
// Shows all 15 flags with toggle buttons in 2-column layout

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "admin_nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsAdminNavBar #HyperFactionsAdminNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 680, Height: 600);

    #Title {
      Group {
        $C.@Title {
          @Text = "Admin: Zone Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      // === Zone Info Header ===
      Group #HeaderSection {
        Anchor: (Height: 32, Bottom: 8);
        LayoutMode: Left;

        Label #ZoneName {
          Text: "Zone Name";
          Style: (FontSize: 16, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
        }

        Label { Anchor: (Width: 12); }

        Label #ZoneType {
          Text: "SAFE";
          Style: (FontSize: 12, TextColor: #2dd4bf, RenderBold: true, VerticalAlignment: Center);
        }

        Label { Anchor: (Width: 12); }

        Label #ZoneChunks {
          Text: "0 chunks";
          Style: (FontSize: 11, TextColor: #888888, VerticalAlignment: Center);
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // === Two-Column Layout ===
      Group #FlagsContainer {
        LayoutMode: Left;
        FlexWeight: 1;

        // ===== LEFT COLUMN (Combat + Building + Damage) =====
        Group #LeftColumn {
          Anchor: (Width: 310);
          LayoutMode: Top;
          Padding: (Right: 10);

          // --- Combat Section Header ---
          Group {
            Anchor: (Height: 16, Bottom: 2);
            Label {
              Text: "COMBAT";
              Style: (FontSize: 10, TextColor: #666666, RenderBold: true);
            }
          }

          // Flag 0: pvp_enabled
          Group {
            Anchor: (Height: 22);
            LayoutMode: Left;
            Label #Flag0Name {
              Text: "PvP Enabled";
              Style: (FontSize: 10, TextColor: #CCCCCC, VerticalAlignment: Center);
              Anchor: (Width: 90);
            }
            Label #Flag0Default {
              Text: "(default)";
              Style: (FontSize: 8, TextColor: #555555, VerticalAlignment: Center);
              Anchor: (Width: 50);
            }
            Label { FlexWeight: 1; }
            TextButton #Flag0Toggle {
              Text: "OFF";
              Anchor: (Height: 18, Width: 42);
              Style: $S.@SmallButtonStyle;
            }
          }

          // Flag 1: friendly_fire
          Group {
            Anchor: (Height: 22);
            LayoutMode: Left;
            Label #Flag1Name {
              Text: "Friendly Fire";
              Style: (FontSize: 10, TextColor: #CCCCCC, VerticalAlignment: Center);

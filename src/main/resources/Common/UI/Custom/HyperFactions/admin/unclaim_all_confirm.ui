// Admin Unclaim All Confirmation Modal
// Shows warning and requires confirmation to unclaim all territory

$C = "../../Common.ui";
$S = "../shared/styles.ui";

$C.@PageOverlay {
  $C.@DecoratedContainer {
    Anchor: (Width: 400, Height: 260);

    #Title {
      Group {
        $C.@Title {
          @Text = "Unclaim All Territory";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 15, Bottom: 15);

      Label {
        Text: "Are you sure you want to unclaim all";
        Style: (FontSize: 13, TextColor: #AAAAAA, HorizontalAlignment: Center);
        Anchor: (Height: 22);
      }

      Label #ClaimCount {
        Text: "0 chunks";
        Style: (FontSize: 14, TextColor: #FFAA00, RenderBold: true, HorizontalAlignment: Center);
        Anchor: (Height: 22);
      }

      Label {
        Text: "from";
        Style: (FontSize: 13, TextColor: #AAAAAA, HorizontalAlignment: Center);
        Anchor: (Height: 18);
      }

      Label #FactionName {
        Text: "Faction Name";
        Style: (FontSize: 14, TextColor: #00FFFF, RenderBold: true, HorizontalAlignment: Center);
        Anchor: (Height: 24, Bottom: 8);
      }

      Label {
        Text: "This action cannot be undone!";
        Style: (FontSize: 12, TextColor: #AA5555, HorizontalAlignment: Center);
        Anchor: (Height: 20, Bottom: 15);
      }

      Group {
        Anchor: (Height: 40);
        LayoutMode: Left;

        TextButton #CancelBtn {
          Text: "CANCEL";
          Anchor: (Height: 32, Width: 120);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        TextButton #ConfirmBtn {
          Text: "UNCLAIM ALL";
          Anchor: (Height: 32, Width: 130);
          Style: $S.@RedButtonStyle;
        }
      }
    }
  }
}

$C.@BackButton {}

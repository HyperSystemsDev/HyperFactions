// Faction Relations Page
// Following AdminUI pattern with nav bar

$C = "../Common.ui";
$S = "styles.ui";
$Nav = "nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 500, Height: 480);

    #Title {
      Group {
        $C.@Title {
          @Text = "Relations";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      Group #Tabs {
        Anchor: (Height: 35, Bottom: 10);
        LayoutMode: Left;

        TextButton #TabAllies {
          Text: "ALLIES";
          Anchor: (Height: 28, Width: 100);
          Style: $S.@CyanButtonStyle;
        }

        Label { Anchor: (Width: 10); }

        TextButton #TabEnemies {
          Text: "ENEMIES";
          Anchor: (Height: 28, Width: 100);
          Style: $S.@RedButtonStyle;
        }

        Label { Anchor: (Width: 10); }

        TextButton #TabRequests {
          Text: "REQUESTS";
          Anchor: (Height: 28, Width: 100);
          Style: $S.@GoldButtonStyle;
        }
      }

      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      Group {
        Anchor: (Height: 25, Bottom: 5);
        LayoutMode: Left;

        Label #EntryCount {
          Text: "0 allies";
          Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        }
      }

      Group #RelationsListContainer {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        FlexWeight: 1;

        Group #RelationsList {
          LayoutMode: Top;

          Group #RelationEntry0 { Anchor: (Height: 45); }
          Group #RelationEntry1 { Anchor: (Height: 45); }
          Group #RelationEntry2 { Anchor: (Height: 45); }
          Group #RelationEntry3 { Anchor: (Height: 45); }
          Group #RelationEntry4 { Anchor: (Height: 45); }
          Group #RelationEntry5 { Anchor: (Height: 45); }
        }
      }

      Group {
        Anchor: (Height: 1, Top: 8, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      Group #Pagination {
        Anchor: (Height: 35);
        LayoutMode: Left;

        TextButton #PrevBtn {
          Text: "< PREV";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        Label #PageInfo {
          Text: "1/1";
          Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Width: 60);
        }

        Label { FlexWeight: 1; }

        TextButton #NextBtn {
          Text: "NEXT >";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }
      }
    }
  }
}

// Native Hytale back button (bottom-left ESC)
$C.@BackButton {}

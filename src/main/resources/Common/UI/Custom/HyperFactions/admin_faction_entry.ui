$C = "../Common.ui";
$S = "styles.ui";

Group {
  Anchor: (Height: 65, Bottom: 5);
  Background: (Color: #1a2a3a);
  Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
  LayoutMode: Left;

  Group {
    Anchor: (Width: 200);
    LayoutMode: Top;

    Label #FactionName {
      Text: "Faction";
      Style: (FontSize: 14, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
      Anchor: (Height: 20);
    }
    Label #LeaderName {
      Text: "Leader: Unknown";
      Style: (FontSize: 11, TextColor: #FFD700, VerticalAlignment: Center);
      Anchor: (Height: 16);
    }
    Label #MemberCount {
      Text: "0 members";
      Style: (FontSize: 11, TextColor: #888888, VerticalAlignment: Center);
      Anchor: (Height: 14);
    }
  }

  Group {
    LayoutMode: Top;
    Anchor: (Width: 150);

    Label #PowerCount {
      Text: "0/0 power";
      Style: (FontSize: 11, TextColor: #44CC44, VerticalAlignment: Center);
      Anchor: (Height: 18);
    }
    Label #ClaimCount {
      Text: "0 claims";
      Style: (FontSize: 11, TextColor: #FFAA00, VerticalAlignment: Center);
      Anchor: (Height: 18);
    }
  }

  Label { FlexWeight: 1; }

  Group {
    LayoutMode: Top;
    Anchor: (Width: 100);

    TextButton #UnclaimAllBtn {
      Text: "UNCLAIM ALL";
      Anchor: (Height: 24, Width: 95);
      Style: $S.@SmallButtonStyle;
    }

    Label { Anchor: (Height: 3); }

    TextButton #DisbandBtn {
      Text: "DISBAND";
      Anchor: (Height: 24, Width: 95);
      Style: $S.@SmallRedButtonStyle;
    }
  }
}

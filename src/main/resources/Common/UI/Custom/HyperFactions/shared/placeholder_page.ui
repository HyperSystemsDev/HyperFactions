// Placeholder Page Template
// Generic "Coming Soon" page with nav bar support

$C = "../../Common.ui";
$S = "styles.ui";
$Nav = "../nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 500, Height: 350);

    #Title {
      Group {
        $C.@Title {
          @Text = "PAGE TITLE";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 30, Right: 30, Top: 20, Bottom: 20);

      // Page icon placeholder
      Group #IconArea {
        Anchor: (Height: 80, Bottom: 20);

        Label #PageIcon {
          Text: "?";
          Style: (FontSize: 48, TextColor: #3b82f6, RenderBold: true, VerticalAlignment: Center, HorizontalAlignment: Center);
        }
      }

      // Main message area
      Group #MessageArea {
        Anchor: (Height: 80);
        LayoutMode: Top;

        Label #StatusLabel {
          Text: "COMING SOON";
          Style: (FontSize: 24, TextColor: #f59e0b, RenderBold: true, HorizontalAlignment: Center);
          Anchor: (Height: 35);
        }

        Label #DescriptionLabel {
          Text: "This feature is under development.";
          Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center);
          Anchor: (Height: 40);
        }
      }

      // Spacer
      Label { FlexWeight: 1; }

      // Hint text
      Group {
        Anchor: (Height: 30);

        Label #HintLabel {
          Text: "Check back in a future update!";
          Style: (FontSize: 11, TextColor: #555555, HorizontalAlignment: Center);
        }
      }
    }
  }
}

// Native Hytale back button (bottom-left ESC)
$C.@BackButton {}

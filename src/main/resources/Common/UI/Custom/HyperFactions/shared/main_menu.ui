// HyperFactions Main Menu
// Central navigation hub for faction management

$C = "../../Common.ui";
$S = "styles.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 500, Height: 520);

  #Title {
    $C.@Title {
      @Text = "Factions";
    }
  }

  #Content {
    LayoutMode: Top;
    Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

    // Header with title
    Group {
      Anchor: (Height: 40, Bottom: 15);
      LayoutMode: Left;

      Label #MenuTitle {
        Text: "HyperFactions";
        Style: (FontSize: 22, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
        FlexWeight: 1;
      }
    }

    // Separator
    Group {
      Anchor: (Height: 1, Bottom: 15);
      Background: (Color: #00AAAA);
    }

    // Section containers - content appended dynamically
    Group #MyFactionSection {
      Anchor: (Height: 0);
      LayoutMode: Top;
    }

    Group #TerritorySection {
      Anchor: (Height: 0);
      LayoutMode: Top;
    }

    Group #BrowseSection {
      Anchor: (Height: 0);
      LayoutMode: Top;
    }

    Group #AdminSection {
      Anchor: (Height: 0);
      LayoutMode: Top;
    }

    // Flexible spacer at bottom
    Group {
      FlexWeight: 1;
    }
  }
}

$C.@BackButton {}

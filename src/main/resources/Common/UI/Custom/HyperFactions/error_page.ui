// Error Page
// Simple error message display

$C = "../Common.ui";
$S = "styles.ui";

$C.@PageOverlay {
  $C.@DecoratedContainer {
    Anchor: (Width: 380, Height: 180);

    #Title {
      Group {
        $C.@Title {
          @Text = "Error";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 20, Bottom: 20);

      Group {
        Anchor: (Height: 60, Bottom: 15);

        Label #ErrorMessage {
          Text: "An error occurred.";
          Style: (FontSize: 13, TextColor: #FF5555, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
      }

      Group {
        Anchor: (Height: 35);
        LayoutMode: Left;

        Group { FlexWeight: 1; }

        TextButton #CloseBtn {
          Text: "CLOSE";
          Anchor: (Height: 30, Width: 100);
          Style: $S.@ButtonStyle;
        }

        Group { FlexWeight: 1; }
      }
    }
  }
}

// Native Hytale back button (bottom-left ESC)
$C.@BackButton {}

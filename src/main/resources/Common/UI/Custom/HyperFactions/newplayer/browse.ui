// New Player Browse Factions Page
// Default landing page for players not in a faction
// Uses expandable IndexCards pattern like admin_factions.ui

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "../nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@Container {
    Anchor: (Width: 700, Height: 500);

    #Title {
      $C.@Title {
        @Text = "Browse Factions";
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      // Header row with subtitle and count
      Group {
        Anchor: (Height: 25, Bottom: 5);
        LayoutMode: Left;

        Label #Subtitle {
          Text: "Find your new home!";
          Style: (FontSize: 13, TextColor: #00FFFF, VerticalAlignment: Center);
          Anchor: (Width: 200);
        }

        Group { FlexWeight: 1; }

        Label #FactionCount {
          Text: "0 factions";
          Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Width: 100);
        }
      }

      // Search row
      Group {
        Anchor: (Height: 38, Bottom: 8);
        LayoutMode: Left;

        TextField #SearchInput {
          FlexWeight: 1;
          Anchor: (Height: 32);
          Style: $C.@DefaultInputFieldStyle;
          Background: $C.@InputBoxBackground;
        }

        Label { Anchor: (Width: 8); }

        TextButton #SearchBtn {
          Text: "SEARCH";
          Anchor: (Height: 30, Width: 80);
          Style: $S.@SmallCyanButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #ClearSearchBtn {
          Text: "X";
          Anchor: (Height: 30, Width: 30);
          Style: $S.@SmallRedButtonStyle;
          Visible: false;
        }
      }

      // Sort buttons row
      Group {
        Anchor: (Height: 30, Bottom: 8);
        LayoutMode: Left;

        Group { FlexWeight: 1; }

        TextButton #SortByPower {
          Text: "POWER";
          Anchor: (Height: 26, Width: 70);
          Style: $S.@SmallCyanButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #SortByName {
          Text: "NAME";
          Anchor: (Height: 26, Width: 65);
          Style: $S.@SmallButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #SortByMembers {
          Text: "MEMBERS";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@SmallButtonStyle;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Scrollable faction list
      Group #FactionListContainer {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        FlexWeight: 1;

        Group #FactionList {
          LayoutMode: Top;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Top: 8, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Pagination
      Group #Pagination {
        Anchor: (Height: 35);
        LayoutMode: Left;

        TextButton #PrevBtn {
          Text: "< PREV";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        Label #PageInfo {
          Text: "1/1";
          Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Width: 60);
        }

        Label { FlexWeight: 1; }

        TextButton #NextBtn {
          Text: "NEXT >";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }
      }
    }
  }
}

$C.@BackButton {}

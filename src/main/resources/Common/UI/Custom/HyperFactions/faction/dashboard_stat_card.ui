// Dashboard Stat Card Template

$S = "../shared/styles.ui";

Group {
  Anchor: (Height: 85);
  Background: (Color: #1a2a3a);
  LayoutMode: Top;

  Label #StatTitle {
    Text: "STAT";
    Style: (FontSize: 11, TextColor: #666666, RenderBold: true);
    Anchor: (Height: 16);
  }

  Label #StatValue {
    Text: "0 / 0";
    Style: (FontSize: 16, TextColor: #00FFFF, RenderBold: true);
    Anchor: (Height: 24);
  }

  Label #StatSecondary {
    Text: "";
    Style: (FontSize: 12, TextColor: #888888);
    Anchor: (Height: 18);
  }
}

// Settings Members Tab Content
// Redirect to the full Members page
// This file is appended directly to #MembersContent container

$C = "../../Common.ui";
$S = "../shared/styles.ui";

Group {
  LayoutMode: Top;

  // Info text
  Label {
    Text: "Member management is available on the Members page.";
    Style: (FontSize: 12, TextColor: #888888, HorizontalAlignment: Center);
    Anchor: (Height: 30, Bottom: 20);
  }

  // Quick stats
  Group {
    LayoutMode: Left;
    Anchor: (Height: 80, Bottom: 20);
    Background: (Color: #0d1520);
    Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label {
        Text: "Total Members";
        Style: (FontSize: 10, TextColor: #888888, RenderBold: true);
        Anchor: (Height: 16);
      }
      Label #MemberCount {
        Text: "0";
        Style: (FontSize: 24, TextColor: #00FFFF, RenderBold: true);
        Anchor: (Height: 32);
      }
    }

    Group { Anchor: (Width: 30); }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label {
        Text: "Online";
        Style: (FontSize: 10, TextColor: #888888, RenderBold: true);
        Anchor: (Height: 16);
      }
      Label #OnlineCount {
        Text: "0";
        Style: (FontSize: 24, TextColor: #55FF55, RenderBold: true);
        Anchor: (Height: 32);
      }
    }
  }

  // View members button
  Group {
    LayoutMode: Left;
    Anchor: (Height: 40);

    Group { FlexWeight: 1; }

    TextButton #ViewMembersBtn {
      Text: "View Members";
      Anchor: (Height: 36, Width: 160);
      Style: $S.@ButtonStyle;
    }

    Group { FlexWeight: 1; }
  }
}

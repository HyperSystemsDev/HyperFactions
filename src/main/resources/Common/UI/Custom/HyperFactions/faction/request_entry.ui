// Join Request Entry
// Shows player name, optional message, time remaining, accept/decline buttons

$C = "../../Common.ui";
$S = "../shared/styles.ui";

Group {
  Anchor: (Height: 55, Bottom: 5);
  Background: (Color: #1a2a3a);
  Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
  LayoutMode: Left;

  // Left side: player info
  Group {
    Anchor: (Width: 220);
    LayoutMode: Top;

    Label #PlayerName {
      Text: "PlayerName";
      Style: (FontSize: 13, TextColor: #FFAA00, RenderBold: true, VerticalAlignment: Center);
      Anchor: (Height: 16);
    }
    Label #RequestMessage {
      Text: "No message";
      Style: (FontSize: 11, TextColor: #AAAAAA, VerticalAlignment: Center);
      Anchor: (Height: 16);
    }
    Label #TimeRemaining {
      Text: "Expires: 24h";
      Style: (FontSize: 10, TextColor: #666666, VerticalAlignment: Center);
      Anchor: (Height: 14);
    }
  }

  // Spacer
  Label { FlexWeight: 1; }

  // Right side: accept/decline buttons
  Group #ButtonsContainer {
    Anchor: (Width: 160);
    LayoutMode: Left;

    TextButton #AcceptBtn {
      Text: "ACCEPT";
      Anchor: (Width: 70, Height: 28);
      Style: $S.@SmallGreenButtonStyle;
    }

    Label { Anchor: (Width: 5); }

    TextButton #DeclineBtn {
      Text: "DECLINE";
      Anchor: (Width: 70, Height: 28);
      Style: $S.@SmallRedButtonStyle;
    }
  }
}

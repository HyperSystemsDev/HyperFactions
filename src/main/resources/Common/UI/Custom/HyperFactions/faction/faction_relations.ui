// Faction Relations Page
// Admin zones style with tabs: ALLIES | ENEMIES | PENDING
// Following AdminUI pattern with nav bar

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "../nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@Container {
    Anchor: (Width: 550, Height: 450);

    #Title {
      $C.@Title {
        @Text = "Relations";
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      // Tab row with action button
      Group #Tabs {
        Anchor: (Height: 35, Bottom: 10);
        LayoutMode: Left;

        TextButton #TabAllies {
          Text: "Allies";
          Anchor: (Height: 26, Width: 65);
          Style: $S.@ButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #TabEnemies {
          Text: "Enemies";
          Anchor: (Height: 26, Width: 75);
          Style: $S.@RedButtonStyle;
        }

        Label { Anchor: (Width: 5); }

        TextButton #TabPending {
          Text: "Pending";
          Anchor: (Height: 26, Width: 75);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        TextButton #SetRelationBtn {
          Text: "+ Set Relation";
          Anchor: (Height: 26, Width: 110);
          Style: $S.@ButtonStyle;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Count label
      Group {
        Anchor: (Height: 25, Bottom: 5);
        LayoutMode: Left;

        Label #ItemCount {
          Text: "0 relations";
          Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        }
      }

      // Scrollable list
      Group #ListContainer {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        FlexWeight: 1;

        Group #ItemList {
          LayoutMode: Top;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Top: 8, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Pagination
      Group #Pagination {
        Anchor: (Height: 35);
        LayoutMode: Left;

        TextButton #PrevBtn {
          Text: "< Prev";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }

        Label { FlexWeight: 1; }

        Label #PageInfo {
          Text: "1/1";
          Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Width: 60);
        }

        Label { FlexWeight: 1; }

        TextButton #NextBtn {
          Text: "Next >";
          Anchor: (Height: 26, Width: 80);
          Style: $S.@ButtonStyle;
        }
      }
    }
  }
}

$C.@BackButton {}

// Settings General Tab Content
// Basic faction settings: name, tag, description, color, recruitment, home
// This file is appended directly to #GeneralContent container

$C = "../../Common.ui";
$S = "../shared/styles.ui";

Group {
  LayoutMode: Top;

  // === GENERAL SECTION ===
  Group #GeneralSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "General";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    // Name row
    Group {
      Anchor: (Height: 32, Bottom: 4);
      LayoutMode: Left;

      Label {
        Text: "Name:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #NameValue {
        Text: "Faction Name";
        Style: (FontSize: 12, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
        FlexWeight: 1;
      }
      TextButton #NameEditBtn {
        Text: "Edit";
        Anchor: (Height: 26, Width: 60);
        Style: $S.@ButtonStyle;
      }
    }

    // Tag row
    Group #TagRow {
      Anchor: (Height: 32, Bottom: 4);
      LayoutMode: Left;

      Label {
        Text: "Tag:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #TagValue {
        Text: "(None)";
        Style: (FontSize: 12, TextColor: #FFAA00, RenderBold: true, VerticalAlignment: Center);
        FlexWeight: 1;
      }
      TextButton #TagEditBtn {
        Text: "Edit";
        Anchor: (Height: 26, Width: 60);
        Style: $S.@ButtonStyle;
      }
    }

    // Description row
    Group {
      Anchor: (Height: 32, Bottom: 12);
      LayoutMode: Left;

      Label {
        Text: "Description:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #DescValue {
        Text: "(None)";
        Style: (FontSize: 12, TextColor: #AAAAAA, VerticalAlignment: Center);
        FlexWeight: 1;
      }
      TextButton #DescEditBtn {
        Text: "Edit";
        Anchor: (Height: 26, Width: 60);
        Style: $S.@ButtonStyle;
      }
    }
  }

  // === APPEARANCE SECTION ===
  Group #AppearanceSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "Appearance";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    // Color row
    Group {
      Anchor: (Height: 32);
      LayoutMode: Left;

      Label {
        Text: "Color:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }

      Group #ColorPreview {
        Anchor: (Width: 24, Height: 24);
        Background: (Color: #00FFFF);
      }

      Label { Anchor: (Width: 10); }

      Label #ColorValue {
        Text: "#00FFFF";
        Style: (FontSize: 12, TextColor: #AAAAAA, VerticalAlignment: Center);
        FlexWeight: 1;
      }

      TextButton #ColorBtn {
        Text: "Change";
        Anchor: (Height: 26, Width: 80);
        Style: $S.@ButtonStyle;
      }
    }
  }

  // === RECRUITMENT SECTION ===
  Group #RecruitmentSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "Recruitment";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    Group {
      Anchor: (Height: 32);
      LayoutMode: Left;

      Label {
        Text: "Status:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }

      Label #RecruitmentStatus {
        Text: "Open";
        Style: (FontSize: 12, TextColor: #55FF55, RenderBold: true, VerticalAlignment: Center);
        FlexWeight: 1;
      }

      TextButton #RecruitmentBtn {
        Text: "Change";
        Anchor: (Height: 26, Width: 80);
        Style: $S.@ButtonStyle;
      }
    }
  }

  // === HOME LOCATION SECTION ===
  Group #HomeSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "Home Location";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    Group {
      Anchor: (Height: 28, Bottom: 4);
      LayoutMode: Left;

      Label {
        Text: "Location:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #HomeLocation {
        Text: "Not set";
        Style: (FontSize: 12, TextColor: #AAAAAA, VerticalAlignment: Center);
        FlexWeight: 1;
      }
    }

    Group {
      Anchor: (Height: 32);
      LayoutMode: Left;

      Label { Anchor: (Width: 80); }

      TextButton #SetHomeBtn {
        Text: "Set Home Here";
        Anchor: (Height: 28, Width: 130);
        Style: $S.@ButtonStyle;
      }

      Label { Anchor: (Width: 10); }

      TextButton #TeleportHomeBtn {
        Text: "Teleport";
        Anchor: (Height: 28, Width: 90);
        Style: $S.@ButtonStyle;
      }

      Label { Anchor: (Width: 10); }

      TextButton #DeleteHomeBtn {
        Text: "Delete";
        Anchor: (Height: 28, Width: 70);
        Style: $S.@RedButtonStyle;
      }
    }
  }

  // === MODULES SECTION ===
  Group #ModulesSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "Modules";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    Group {
      Anchor: (Height: 36);
      LayoutMode: Left;

      Label {
        Text: "Configure optional faction features";
        Style: (FontSize: 11, TextColor: #666666, VerticalAlignment: Center);
        FlexWeight: 1;
      }

      TextButton #ModulesBtn {
        Text: "View Modules";
        Anchor: (Height: 28, Width: 120);
        Style: $S.@ButtonStyle;
      }
    }
  }

  // Danger zone (hidden by default, shown for leaders via Java)
  Group #DangerZone {
    Visible: false;
    LayoutMode: Top;

    Label {
      Text: "Danger Zone";
      Style: (FontSize: 11, TextColor: #FF5555, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #553333);
    }

    Group {
      Anchor: (Height: 50);
      Background: (Color: #331111);
      Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
      LayoutMode: Left;

      Group {
        LayoutMode: Top;
        FlexWeight: 1;

        Label {
          Text: "Disband Faction";
          Style: (FontSize: 12, TextColor: #FF5555, RenderBold: true, VerticalAlignment: Center);
          Anchor: (Height: 16);
        }
        Label {
          Text: "This action cannot be undone!";
          Style: (FontSize: 10, TextColor: #AA5555, VerticalAlignment: Center);
          Anchor: (Height: 14);
        }
      }

      TextButton #DisbandBtn {
        Text: "Disband";
        Anchor: (Height: 32, Width: 100);
        Style: $S.@RedButtonStyle;
      }
    }
  }
}

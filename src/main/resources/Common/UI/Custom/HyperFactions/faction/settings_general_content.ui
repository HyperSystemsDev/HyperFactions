// Settings General Tab Content
// Basic faction settings: name, tag, description, color, recruitment, home
// This file is appended directly to #GeneralContent container

$S = "../shared/styles.ui";

Group {
  LayoutMode: Top;

  // === GENERAL SECTION ===
  Group #GeneralSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "GENERAL";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    // Name row
    Group {
      Anchor: (Height: 32, Bottom: 4);
      LayoutMode: Left;

      Label {
        Text: "Name:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #NameValue {
        Text: "Faction Name";
        Style: (FontSize: 12, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
        FlexWeight: 1;
      }
      TextButton #NameEditBtn {
        Text: "EDIT";
        Anchor: (Height: 26, Width: 60);
        Style: $S.@SmallCyanButtonStyle;
      }
    }

    // Tag row
    Group #TagRow {
      Anchor: (Height: 32, Bottom: 4);
      LayoutMode: Left;

      Label {
        Text: "Tag:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #TagValue {
        Text: "(None)";
        Style: (FontSize: 12, TextColor: #FFAA00, RenderBold: true, VerticalAlignment: Center);
        FlexWeight: 1;
      }
      TextButton #TagEditBtn {
        Text: "EDIT";
        Anchor: (Height: 26, Width: 60);
        Style: $S.@SmallCyanButtonStyle;
      }
    }

    // Description row
    Group {
      Anchor: (Height: 32, Bottom: 12);
      LayoutMode: Left;

      Label {
        Text: "Description:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #DescValue {
        Text: "(None)";
        Style: (FontSize: 12, TextColor: #AAAAAA, VerticalAlignment: Center);
        FlexWeight: 1;
      }
      TextButton #DescEditBtn {
        Text: "EDIT";
        Anchor: (Height: 26, Width: 60);
        Style: $S.@SmallCyanButtonStyle;
      }
    }
  }

  // === APPEARANCE SECTION ===
  Group #AppearanceSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "APPEARANCE";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    // Color row
    Group {
      Anchor: (Height: 32);
      LayoutMode: Left;

      Label {
        Text: "Color:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }

      Group #ColorPreview {
        Anchor: (Width: 24, Height: 24);
        Background: (Color: #00FFFF);
      }

      Label { Anchor: (Width: 10); }

      Label #ColorValue {
        Text: "#00FFFF";
        Style: (FontSize: 12, TextColor: #AAAAAA, VerticalAlignment: Center);
        FlexWeight: 1;
      }

      TextButton #ColorBtn {
        Text: "CHANGE";
        Anchor: (Height: 26, Width: 80);
        Style: $S.@SmallCyanButtonStyle;
      }
    }
  }

  // === RECRUITMENT SECTION ===
  Group #RecruitmentSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "RECRUITMENT";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    Group {
      Anchor: (Height: 32);
      LayoutMode: Left;

      Label {
        Text: "Status:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }

      Label #RecruitmentStatus {
        Text: "Open";
        Style: (FontSize: 12, TextColor: #55FF55, RenderBold: true, VerticalAlignment: Center);
        FlexWeight: 1;
      }

      TextButton #RecruitmentBtn {
        Text: "CHANGE";
        Anchor: (Height: 26, Width: 80);
        Style: $S.@SmallCyanButtonStyle;
      }
    }
  }

  // === HOME LOCATION SECTION ===
  Group #HomeSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "HOME LOCATION";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    Group {
      Anchor: (Height: 28, Bottom: 4);
      LayoutMode: Left;

      Label {
        Text: "Location:";
        Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
        Anchor: (Width: 80);
      }
      Label #HomeLocation {
        Text: "Not set";
        Style: (FontSize: 12, TextColor: #AAAAAA, VerticalAlignment: Center);
        FlexWeight: 1;
      }
    }

    Group {
      Anchor: (Height: 32);
      LayoutMode: Left;

      Label { Anchor: (Width: 80); }

      TextButton #SetHomeBtn {
        Text: "SET HOME HERE";
        Anchor: (Height: 28, Width: 130);
        Style: $S.@SmallCyanButtonStyle;
      }

      Label { Anchor: (Width: 10); }

      TextButton #TeleportHomeBtn {
        Text: "TELEPORT";
        Anchor: (Height: 28, Width: 90);
        Style: $S.@SmallGreenButtonStyle;
      }

      Label { Anchor: (Width: 10); }

      TextButton #DeleteHomeBtn {
        Text: "DELETE";
        Anchor: (Height: 28, Width: 70);
        Style: $S.@SmallRedButtonStyle;
      }
    }
  }

  // === MODULES SECTION ===
  Group #ModulesSection {
    LayoutMode: Top;
    Anchor: (Bottom: 12);

    Label {
      Text: "MODULES";
      Style: (FontSize: 11, TextColor: #888888, RenderBold: true);
      Anchor: (Height: 18, Bottom: 4);
    }

    Group {
      Anchor: (Height: 1, Bottom: 6);
      Background: (Color: #334455);
    }

    Group {
      Anchor: (Height: 36);
      LayoutMode: Left;

      Label {
        Text: "Configure optional faction features";
        Style: (FontSize: 11, TextColor: #666666, VerticalAlignment: Center);
        FlexWeight: 1;
      }

      TextButton #ModulesBtn {
        Text: "VIEW MODULES";
        Anchor: (Height: 28, Width: 120);
        Style: $S.@SmallCyanButtonStyle;
      }
    }
  }

  // Container for danger zone (appended conditionally for leaders)
  Group #DangerZoneContainer {
    LayoutMode: Top;
  }
}

// Faction Settings Page - Tabbed Layout
// GENERAL | PERMISSIONS | MEMBERS tabs

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "../nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 600, Height: 620);

    #Title {
      Group {
        $C.@Title {
          @Text = "Faction Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 0, Right: 0, Top: 0, Bottom: 0);

      // Tab bar
      Group #TabBar {
        LayoutMode: Left;
        Anchor: (Height: 40, Left: 0, Right: 0);
        Background: (Color: #0d1520);
        Padding: (Left: 10, Right: 10, Top: 2, Bottom: 2);

        TextButton #TabGeneral {
          Text: "GENERAL";
          Anchor: (Width: 120, Height: 36);
          Style: $S.@SmallCyanButtonStyle;
        }

        Group { Anchor: (Width: 4); }

        TextButton #TabPermissions {
          Text: "PERMISSIONS";
          Anchor: (Width: 140, Height: 36);
          Style: $S.@SmallCyanButtonStyle;
        }

        Group { Anchor: (Width: 4); }

        TextButton #TabMembers {
          Text: "MEMBERS";
          Anchor: (Width: 120, Height: 36);
          Style: $S.@SmallCyanButtonStyle;
        }
      }

      // Separator line
      Group {
        Anchor: (Height: 1);
        Background: (Color: #334455);
      }

      // Content area (panels switched by visibility)
      Group #ContentArea {
        LayoutMode: Top;
        FlexWeight: 1;

        // General tab content
        Group #GeneralContent {
          Visible: true;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;
          Padding: (Left: 15, Right: 15, Top: 15, Bottom: 15);
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        }

        // Permissions tab content
        Group #PermissionsContent {
          Visible: false;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;
          Padding: (Left: 15, Right: 15, Top: 15, Bottom: 15);
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        }

        // Members tab content
        Group #MembersContent {
          Visible: false;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;
          Padding: (Left: 15, Right: 15, Top: 15, Bottom: 15);
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        }
      }
    }
  }
}

// Native Hytale back button (bottom-left ESC)
$C.@BackButton {}

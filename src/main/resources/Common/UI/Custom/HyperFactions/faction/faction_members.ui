// Faction Members Page
// Displays member list with expandable entries

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "../nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 520, Height: 550);

    #Title {
      Group {
        $C.@Title {
          @Text = "Members";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      // Header row with member count
      Group {
        Anchor: (Height: 36, Bottom: 8);
        LayoutMode: Left;

        Label #MemberCount {
          Text: "0 members";
          Style: (FontSize: 14, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Width: 120);
        }

        Group { FlexWeight: 1; }

        TextButton #SortByRole {
          Text: "ROLE";
          Anchor: (Height: 24, Width: 60);
          Style: $S.@SmallCyanButtonStyle;
        }

        Group { Anchor: (Width: 4); }

        TextButton #SortByOnline {
          Text: "ONLINE";
          Anchor: (Height: 24, Width: 70);
          Style: $S.@SmallButtonStyle;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Scrollable member list
      Group #MembersListContainer {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        FlexWeight: 1;

        Group #MembersList {
          LayoutMode: Top;
        }
      }
    }
  }
}

$C.@BackButton {}

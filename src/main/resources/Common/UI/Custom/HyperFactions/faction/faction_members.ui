// Faction Members Page
// Displays member list with expandable entries

$C = "../../Common.ui";
$S = "../shared/styles.ui";
$Nav = "../nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 520, Height: 550);

    #Title {
      Group {
        $C.@Title {
          @Text = "Members";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      // Header row with member count
      Group {
        Anchor: (Height: 36, Bottom: 8);
        LayoutMode: Left;

        Label #MemberCount {
          Text: "0 members";
          Style: (FontSize: 14, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Width: 120);
        }

        Group { FlexWeight: 1; }

        Label {
          Text: "Sort:";
          Style: (FontSize: 11, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Width: 35);
        }
        DropdownBox #SortDropdown {
          Style: $C.@DefaultDropdownBoxStyle;
          Anchor: (Height: 28, Width: 140);
        }
      }

      // Search row
      Group {
        Anchor: (Height: 38, Bottom: 8);
        LayoutMode: Left;

        Label {
          Text: "Search:";
          Style: (FontSize: 11, TextColor: #888888, VerticalAlignment: Center);
          Anchor: (Width: 55);
        }

        $C.@TextField #SearchInput {
          FlexWeight: 1;
          Anchor: (Height: 32);
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Member list (paginated, no scrolling needed with 8/page)
      Group #MembersListContainer {
        LayoutMode: Top;
        FlexWeight: 1;

        Group #MembersList {
          LayoutMode: Top;
        }
      }

      // Pagination controls
      Group {
        Anchor: (Height: 40, Top: 8);
        LayoutMode: Left;

        TextButton #PrevBtn {
          Text: "< Prev";
          Anchor: (Height: 28, Width: 70);
          Style: $S.@ButtonStyle;
          Visible: false;
        }

        Group { FlexWeight: 1; }

        Label #PageIndicator {
          Text: "1 / 1";
          Style: (FontSize: 12, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
          Anchor: (Width: 60);
          Visible: false;
        }

        Group { FlexWeight: 1; }

        TextButton #NextBtn {
          Text: "Next >";
          Anchor: (Height: 28, Width: 70);
          Style: $S.@ButtonStyle;
          Visible: false;
        }
      }
    }
  }
}

$C.@BackButton {}

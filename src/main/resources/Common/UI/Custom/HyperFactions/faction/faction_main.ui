// Faction Dashboard Page
// Following AdminUI pattern exactly

$C = "../../Common.ui";
$Nav = "../nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 520, Height: 400);

    #Title {
      Group {
        $C.@Title {
          @Text = "Faction Dashboard";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

      // Invite notification container (dynamically populated)
      Group #InviteNotification {
        LayoutMode: Top;
      }

      // Faction name header
      Group #FactionHeader {
        Anchor: (Height: 40, Bottom: 6);
        LayoutMode: Left;

        Label #FactionName {
          Text: "No Faction";
          Style: (FontSize: 20, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
          FlexWeight: 1;
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Stats section (compact 2-column layout)
      Group #StatsSection {
        Anchor: (Height: 108, Bottom: 8);
        LayoutMode: Top;

        // Row 1: Power and Claims
        Group {
          Anchor: (Height: 26);
          LayoutMode: Left;

          Label {
            Text: "Power:";
            Style: (FontSize: 13, TextColor: #888888, VerticalAlignment: Center);
            Anchor: (Width: 70);
          }
          Label #PowerValue {
            Text: "0 / 0";
            Style: (FontSize: 13, TextColor: #44CC44, RenderBold: true, VerticalAlignment: Center);
            Anchor: (Width: 100);
          }
          Label {
            Text: "Claims:";
            Style: (FontSize: 13, TextColor: #888888, VerticalAlignment: Center);
            Anchor: (Width: 60);
          }
          Label #ClaimsValue {
            Text: "0 / 0";
            Style: (FontSize: 13, TextColor: #FFAA00, RenderBold: true, VerticalAlignment: Center);
            FlexWeight: 1;
          }
        }

        // Row 2: Members and Role
        Group {
          Anchor: (Height: 26);
          LayoutMode: Left;

          Label {
            Text: "Members:";
            Style: (FontSize: 13, TextColor: #888888, VerticalAlignment: Center);
            Anchor: (Width: 70);
          }
          Label #MembersValue {
            Text: "0";
            Style: (FontSize: 13, TextColor: #AAAAAA, RenderBold: true, VerticalAlignment: Center);
            Anchor: (Width: 100);
          }
          Label {
            Text: "Role:";
            Style: (FontSize: 13, TextColor: #888888, VerticalAlignment: Center);
            Anchor: (Width: 60);
          }
          Label #RoleValue {
            Text: "Member";
            Style: (FontSize: 13, TextColor: #AAAAFF, RenderBold: true, VerticalAlignment: Center);
            FlexWeight: 1;
          }
        }

        // Row 3: Allies and Enemies
        Group {
          Anchor: (Height: 26);
          LayoutMode: Left;

          Label {
            Text: "Allies:";
            Style: (FontSize: 13, TextColor: #888888, VerticalAlignment: Center);
            Anchor: (Width: 70);
          }
          Label #AlliesValue {
            Text: "0";
            Style: (FontSize: 13, TextColor: #44FF44, RenderBold: true, VerticalAlignment: Center);
            Anchor: (Width: 100);
          }
          Label {
            Text: "Enemies:";
            Style: (FontSize: 13, TextColor: #888888, VerticalAlignment: Center);
            Anchor: (Width: 60);
          }
          Label #EnemiesValue {
            Text: "0";
            Style: (FontSize: 13, TextColor: #FF5555, RenderBold: true, VerticalAlignment: Center);
            FlexWeight: 1;
          }
        }

        // Spacing for future module summaries
        Group {
          Anchor: (Height: 30);
        }
      }

      // Divider
      Group {
        Anchor: (Height: 1, Bottom: 8);
        Background: (Color: #00AAAA);
      }

      // Action area (dynamically populated)
      Group #ActionArea {
        FlexWeight: 1;
        LayoutMode: Top;
      }
    }
  }
}

// Native Hytale back button (bottom-left ESC)
$C.@BackButton {}

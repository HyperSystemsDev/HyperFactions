$C = "../Common.ui";
$S = "styles.ui";

Group {
  Anchor: (Height: 50, Bottom: 10);
  Background: (Color: #1a3a4a);
  Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
  LayoutMode: Left;

  Label {
    Text: "Invite from";
    Style: (FontSize: 12, TextColor: #888888, VerticalAlignment: Center);
    Anchor: (Width: 80);
  }

  Label #InviteFactionName {
    Text: "Unknown";
    Style: (FontSize: 12, TextColor: #00FFFF, RenderBold: true, VerticalAlignment: Center);
    FlexWeight: 1;
  }

  TextButton #AcceptInviteBtn {
    Text: "ACCEPT";
    Anchor: (Height: 26, Width: 70);
    Style: $S.@SmallGreenButtonStyle;
  }

  Label { Anchor: (Width: 5); }

  TextButton #DeclineInviteBtn {
    Text: "DECLINE";
    Anchor: (Height: 26, Width: 70);
    Style: $S.@SmallRedButtonStyle;
  }
}

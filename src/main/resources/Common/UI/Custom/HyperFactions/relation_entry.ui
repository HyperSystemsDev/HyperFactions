$C = "../Common.ui";
$S = "styles.ui";

Group {
  Anchor: (Height: 45, Bottom: 5);
  Background: (Color: #1a2a3a);
  Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
  LayoutMode: Left;

  Group {
    Anchor: (Width: 200);
    LayoutMode: Top;

    Label #FactionName {
      Text: "Faction";
      Style: (FontSize: 13, TextColor: #00AAFF, RenderBold: true, VerticalAlignment: Center);
      Anchor: (Height: 18);
    }
    Label #RelationType {
      Text: "ALLY";
      Style: (FontSize: 11, TextColor: #888888, VerticalAlignment: Center);
      Anchor: (Height: 16);
    }
  }

  Label { FlexWeight: 1; }

  TextButton #RemoveBtn {
    Text: "REMOVE";
    Anchor: (Height: 26, Width: 70);
    Style: $S.@SmallRedButtonStyle;
  }

  TextButton #NeutralBtn {
    Text: "NEUTRAL";
    Anchor: (Height: 26, Width: 70);
    Style: $S.@SmallButtonStyle;
  }

  TextButton #AcceptBtn {
    Text: "ACCEPT";
    Anchor: (Height: 26, Width: 70);
    Style: $S.@SmallGreenButtonStyle;
  }

  Label { Anchor: (Width: 5); }

  TextButton #DeclineBtn {
    Text: "DECLINE";
    Anchor: (Height: 26, Width: 70);
    Style: $S.@SmallRedButtonStyle;
  }
}

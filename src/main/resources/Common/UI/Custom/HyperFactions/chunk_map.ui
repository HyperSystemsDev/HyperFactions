// Territory Map Page
// Following AdminUI pattern with nav bar

$C = "../Common.ui";
$S = "styles.ui";
$Nav = "nav/nav_bar.ui";

$C.@PageOverlay {
  $Nav.@HyperFactionsNavBar #HyperFactionsNavBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 400, Height: 300);

    #Title {
      Group {
        $C.@Title {
          @Text = "Territory Map";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 20, Bottom: 20);

      Label #PositionInfo {
        Text: "Your Position: Chunk (0, 0)";
        Style: (FontSize: 16, TextColor: #00FFFF, RenderBold: true, HorizontalAlignment: Center);
        Anchor: (Height: 30, Bottom: 15);
      }

      Group {
        Anchor: (Height: 1, Bottom: 15);
        Background: (Color: #00AAAA);
      }

      Label #ChunkStatus {
        Text: "Wilderness (Unclaimed)";
        Style: (FontSize: 14, TextColor: #AAAAAA, HorizontalAlignment: Center);
        Anchor: (Height: 25, Bottom: 10);
      }

      Label #FactionClaims {
        Text: "Your Claims: 0";
        Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center);
        Anchor: (Height: 25, Bottom: 20);
      }

      Group {
        Anchor: (Height: 1, Bottom: 15);
        Background: (Color: #00AAAA);
      }

      Label #MapHint {
        Text: "Use /f map in chat for a visual territory map";
        Style: (FontSize: 12, TextColor: #666666, HorizontalAlignment: Center);
        Anchor: (Height: 20);
      }
    }
  }
}

// Native Hytale back button (bottom-left ESC)
$C.@BackButton {}
